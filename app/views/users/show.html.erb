<div class="user_page">
  <header class="user_page-header">
    <div class="yjContainer">
      <a href="">
        <div class="user_image"><%= image_tag current_user.avatar %></div>
        <h2><%= current_user.nickname %><span>さんのマイページ</span></h2>
      </a>
    </div>
  </header>
  <div class="pt1em pb1em" id="contents">  <div id="main_cnt_wrapper">
    <div id="yjContentsBody">
      <div class="yjContainer">
        <ul class="user_page-contents">
           <%  current_user.review.each do |r| %>
              <li style="background-image: url(<%= r.product.image_url %>)">
                <div class="meta">
                  <header>
                    <div class="title"><%= r.product.title %></div>
                    <span class="star"><span class="rating-star"><i class="star-actived rate-<%= r.rate %>0"></i></span></span>
                  </header>
                  <div class="user_review"><%= r.reviews %></div>
                </div>
              </li>
            <% end %>
        </ul>

      </div>
    </div>
  </div>